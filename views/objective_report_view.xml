<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_objective_report_tree" model="ir.ui.view">
        <field name="name">objective.report.tree</field>
        <field name="model">objective.report</field>
        <field name="arch" type="xml">
            <tree string="Report">
                <field name="partner_id"/>
                <field name="objective_id"/>
                <field name="hours"/>
              </tree>
         </field>
    </record>

    <record id="action_objective_report_view" model="ir.actions.act_window">
         <field name="name">Objective Report</field>
         <field name="res_model">objective.report</field>
         <field name="view_mode">tree</field>
         <field name="view_id" ref="view_objective_report_tree"/>
    </record>

    <menuitem id="sub_menu_status_03"
              name="Objective Report"
              parent="main_menu_report"
              action="action_objective_report_view"/>
</odoo>
